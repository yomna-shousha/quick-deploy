{
  "name": "quick-deploy",
  "version": "2.0.0-typescript",
  "description": "One-command deployment for modern web frameworks to Cloudflare Workers & Pages",
  "main": "dist/index.js",
  "bin": {
    "quick-deploy": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist/",
    "prepack": "npm run build"
  },
  "keywords": [
    "deployment",
    "cloudflare",
    "nextjs",
    "astro",
    "vite",
    "automation"
  ],
  "author": "Quick Deploy Contributors",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "globby": "^14.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.5.5",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
